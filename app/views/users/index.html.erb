<% provide(:title, 'All users') %>
<h1>All users</h1>


<div class="users-outer-container">
  <% @users.each do |user| %>
    <div class="users-card-container">
      <div class="user-picture">
        <%= gravatar_for user, size: 50 %>
      </div>
      <div class="user-link">
        <%= link_to user.
        name, user %>
      </div>
    </div>
  <% end %>
</div>
