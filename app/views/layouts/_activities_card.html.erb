<div class="users-activities-container">
  <%activities.each do |activity|%>
    <div class="activities-card-container">
      <img class="top-activity-card" src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcS51NatASNQs7LKejInV8vrYzM1TVZ_4YAtNEIRXrBLaqyg5fQi" />
      <div class="bottom-activity-card">
        <div class="activity-card-name"><%=activity.activity_name%></div>
        <a href="<%user_path(activity.user)%>"><div class="activity-card-user"><%=activity.user.name%></div></a>
        <div class="activity-card-price">$<%=activity.cost%></div>
      </div>
    </div>
  <%end%>
</div>
