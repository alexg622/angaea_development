<% provide(:title, 'New Activity') %>
<h1>Sign up</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@activity) do |f| %>
      <%= f.label :activty "name" %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :Description ,  "Description" %>
      <%= f.text_field :content, class: 'form-control' %>

      <%= f.label :additional_info,  "Aditional info " %>
      <%= f.text_field :content, class: 'form-control' %>

      <%= f.label :price, "How much would you like to charge? " %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>

      <%= f.label :Adrress1, "Address line 1" %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>

      <%= f.label :Adrress2, "Address line 2" %>
      <%= f.password_field :content, addresss: 'form-control' %>

      <%= f.label :City, "City" %>
      <%= f.password_field :content , city: 'form-control' %>

      <%= f.label :State, "State" %>
      <%= f.password_field :content, state: 'form-control' %>


      <%= f.submit "Post Activity", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
